---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<header class="text-center py-16 bg-gradient-to-b from-purple-900 to-purple-800">
  <h1 class="text-4xl font-bold text-white mb-4">{title}</h1>
  <p class="text-xl text-purple-200">{subtitle}</p>
</header>